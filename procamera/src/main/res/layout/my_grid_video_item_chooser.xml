<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="124dp"
    android:layout_height="120dp" >

    <ImageView
        android:id="@+id/imageVieGridItemRowView"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:contentDescription="@null"
        android:background="@color/black"
        android:scaleType="centerCrop" />

    <CheckedTextView
        android:id="@+id/checkTextGridItemView"
        android:layout_marginTop="3dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:layout_margin="4dp"
        android:layout_alignRight="@+id/imageVieGridItemRowView"
        android:checkMark="@drawable/selector_check"
       />

    <ImageView
            android:id="@+id/video_iocon"
            android:layout_width="7dp"
            android:layout_height="8dp"
            android:background="@drawable/video_icon_item"
            android:layout_alignBottom="@+id/imageVieGridItemRowView"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentRight="true"
             />

    <TextView
            android:id="@+id/video_duration_time"
            android:textColor="@color/white"
            android:textSize="5.0sp"
            android:layout_alignBottom="@+id/imageVieGridItemRowView"
            android:layout_toLeftOf="@+id/video_iocon"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="9dp"
            android:text="03:04:05"
            />

</RelativeLayout>