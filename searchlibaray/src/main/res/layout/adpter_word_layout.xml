<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="14dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/news_list_item_title"
                    android:textSize="18.0sp"
                    android:textColor="@drawable/news_title_color_xml"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:minLines="3"/>

                <LinearLayout
                    android:id="@+id/bottom_news_layout"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    >

                    <TextView
                        android:id="@+id/news_list_item_source_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新湖网"
                        android:visibility="gone"
                        android:textSize="12.0sp"
                        android:textColor="@color/lives_bottom_gray"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:id="@+id/news_list_item_command_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22评论"
                        android:textSize="12.0sp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/news_item_title_forget_color"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/news_list_item_time"
                        android:textSize="12.0sp"
                        android:text="2016-11"
                        android:textColor="@color/news_item_title_forget_color"
                        android:gravity="bottom|left"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="11dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/news_news_list_item_image"
                    android:src="@drawable/glide_default_image"
                    android:layout_width="107dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line_color"/>
    </LinearLayout>
</LinearLayout>