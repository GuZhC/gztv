<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_bgd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/item_bkg_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/blue2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_service_live_tag"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/item_live_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#2c2c2c"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAppearance="@style/TextAppearance.BoldFont"
                    android:text="如果你无法简洁的表达你的想法，那只说明你还不够了解它"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_live_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="20.5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_back_live"/>

                    <TextView
                        android:id="@+id/item_user_num_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_alignTop="@+id/item_live_type_text"
                        android:layout_alignBottom="@+id/item_live_type_text"
                        android:layout_toRightOf="@+id/item_live_type_text"
                        android:gravity="center"
                        android:text="1456参与"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="13sp"
                        android:background="@drawable/bg_text_visitor_num"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#dbdbdb"/>
</LinearLayout>