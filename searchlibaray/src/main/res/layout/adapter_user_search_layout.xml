<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.dfsx.core.common.view.CircleImageView
            android:id="@+id/user_logo"
            android:layout_width="55dp"
            android:layout_height="55dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_33"
                android:textSize="16dp"
                android:text="11111111111"/>

            <TextView
                android:id="@+id/user_signature_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_a9"
                android:layout_marginTop="7dp"
                android:textSize="16dp"
                android:text="11111111111"/>
        </LinearLayout>

        <TextView
            android:id="@+id/concern_state_btn"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:text="@string/search_concern"
            android:gravity="center"
            android:background="@drawable/shape_btn_concern_blue"
            android:textSize="14dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line_color"/>
</LinearLayout>