<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/gray_303_bg"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/commentLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="19dp"
        android:orientation="vertical"
        >

        <!-- 输入框 -->
        <EditText
            android:id="@+id/commentEdit_replay_edt"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/gray_a9"
            android:background="@color/video_commend_bankground"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:maxLines="6"
            />
        <!-- 留言按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/commentButton"
                android:layout_width="70dp"
                android:layout_height="37dp"
                android:layout_marginTop="17dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:src="@drawable/video_send_normal"
                android:background="@null"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
