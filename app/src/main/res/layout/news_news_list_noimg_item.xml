<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"  android:orientation="vertical"   android:paddingTop="10dp"    android:paddingLeft="13dp" android:paddingRight="13dp"  android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"   android:orientation="vertical" android:layout_height="wrap_content"
                >
                    <TextView
                            android:textSize="18.0sp"
                            android:textColor="@color/news_item_title_color"
                            android:ellipsize="end"
                            android:id="@+id/news_list_item_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="3"/>


                    <LinearLayout
                            android:id="@+id/bottom_news_layout"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            >


                        <TextView
                                android:id="@+id/news_list_item_cloumn_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="置顶"
                                android:visibility="gone"
                                style="@style/NewsKeyTopFont"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                />


                        <TextView
                                android:id="@+id/news_list_item_source_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="新湖网"
                                android:visibility="gone"
                                android:textSize="12.0sp"
                                android:textColor="@color/lives_bottom_gray"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                />

                        <TextView
                                android:id="@+id/news_list_item_command_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22人观看 "
                                android:textSize="12.0sp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/lives_bottom_gray"
                                android:layout_centerVertical="true"
                                />


                        <TextView
                                android:textSize="12.0sp"
                                android:text="3小时前"
                                android:textColor="@color/lives_bottom_gray"
                                android:gravity="bottom|left"
                                android:id="@+id/news_list_item_time"
                                android:layout_width="wrap_content"
                                android:layout_marginRight="11dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                />

                    </LinearLayout>
    </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_marginTop="14dp"  android:background="@color/gray_303_bg" android:layout_height="1dp"  />
    </LinearLayout>
</LinearLayout>
