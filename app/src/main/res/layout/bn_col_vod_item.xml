<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:paddingLeft="14dp"
                  android:paddingRight="14dp"  android:paddingBottom="13dp"
                  android:paddingTop="12dp"
                  android:id="@+id/item_body"
                  android:background="@drawable/col_vod_fr_bankground"
                  android:orientation="vertical" android:layout_height="172dp">

        <RelativeLayout android:layout_width="match_parent" android:gravity="center_vertical"  android:layout_height="45dp">
            <TextView
                    android:id="@+id/item_title"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="1111"
            />
            <ImageView
                    android:id="@+id/item_extned_image"
                    android:layout_width="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/more_cirbtn"
                    android:scaleType="centerCrop"
            />
        </RelativeLayout>
        <TextView
                android:id="@+id/content_tv"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#ccffffff"
                android:textSize="13sp"
                android:gravity="left|top"
                android:text="111"
        />
        </LinearLayout>
       <View android:layout_width="match_parent" android:layout_height="6dp" />
</LinearLayout>