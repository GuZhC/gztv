<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:switchbutton="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

        <View
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_height="1dp"
                android:background="#dcdcdc"
        />

        <RelativeLayout android:layout_width="match_parent"
                        android:paddingLeft="10dp" android:paddingRight="9dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="54dp">
            <ImageView
                    android:id="@+id/dis_local_mark"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/disclure_local_mmark"/>
            <EditText
                    android:id="@+id/txt_local_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/open_btn"
                    android:background="@null"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/dis_local_mark"
                    android:textSize="16dp"
                    android:textColor="@color/black_33"
                    android:textColorHint="#9d9d9d"
            />

            <com.dfsx.core.common.view.SwitchView
                    android:id="@+id/open_btn"
                    android:layout_width="50dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    switchbutton:primaryColor="@color/public_purple_bkg"
            />

        </RelativeLayout>

        <View
                android:id="@+id/divide_line"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="#efeff4"
        />
        <com.dfsx.ganzcms.app.view.EditTextEx
                android:id="@+id/edit_name_"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="left|top"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="16dp"
                android:background="@null"
                android:textColor="@color/black_33"
                android:textColorHint="#9d9d9d"
                android:hint="@string/disclure_name_hit"
        />
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/line_e9_color"/>
        <com.dfsx.ganzcms.app.view.EditTextEx
                android:id="@+id/edit_tele_txt"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="left|top"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp"
                android:background="@null"
                android:paddingBottom="14dp"
                android:numeric="integer"
                android:textSize="16dp"
                android:textColor="@color/black_33"
                android:textColorHint="#9d9d9d"
                android:hint="@string/disclure_tel_hit"
        />
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/line_e9_color"/>

        <View android:layout_width="match_parent" android:layout_height="54dp"
              android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>

