                                                        android:layout_centerVertical="true"
                                                        android:scaleType="center"
                                                        android:id="@+id/fm_ciru_lay"
                                                        />
                                              <!--</FrameLayout>-->
                                                <ImageButton android:layout_width="wrap_content"  android:scaleType="center"   android:layout_centerHorizontal="true"
                                                               android:id="@+id/radio_plays_btn" android:layout_centerVertical="true"  android:layout_height="wrap_content"  android:src="@drawable/radio_play"
                                                             android:background="@null"  />
                                        <!--</RelativeLayout>-->
                                </RelativeLayout>
                        </FrameLayout>

                        <!--android:layout_marginTop="-40dp"-->

                        <ImageView
                                android:id="@+id/fm_header_lay"
                                android:layout_centerInParent="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/head_fm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
