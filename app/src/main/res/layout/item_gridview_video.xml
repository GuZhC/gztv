<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
  <RelativeLayout android:layout_width="wrap_content"  android:layout_height="wrap_content">
    <com.dfsx.ganzcms.app.util.ImageProcessView
        android:id="@+id/item_grida_image"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:scaleType="centerCrop"
        android:src="@drawable/file_item" >
    </com.dfsx.ganzcms.app.util.ImageProcessView>
    <ImageView
            android:id="@+id/image_play_view"
            android:layout_centerInParent="true"
            android:layout_width="19dp"
            android:layout_height="14dp"
            android:scaleType="fitXY"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:layout_alignBottom="@+id/item_grida_image"
            android:layout_alignLeft="@+id/item_grida_image"
            android:src="@drawable/video_icon_item" >
    </ImageView>
      <ImageView android:id="@+id/commeng_ing_del_thumb"  android:layout_alignRight="@+id/item_grida_image"   android:layout_alignTop="@+id/item_grida_image" android:scaleType="fitXY"   android:src="@drawable/pub_img_del"  android:background="@null"   android:layout_width="35dp"   android:layout_height="35dp"/>
  </RelativeLayout>
</LinearLayout>