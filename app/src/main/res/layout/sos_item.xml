<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/relative_body"
                android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="120dp">


    <ImageView android:layout_width="wrap_content"
               android:id="@+id/image_res"
               android:layout_centerHorizontal="true"
               android:src="@drawable/icon_sos_voice"
               android:layout_height="wrap_content"/>

    <TextView android:id="@+id/text_item"
              android:textSize="12sp"
              android:hint="高音频"
              android:layout_marginTop="13dp"
              android:layout_below="@id/image_res"
              android:layout_centerHorizontal="true"
              android:textColor="#323232"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <ImageView android:id="@+id/image_use"
               android:layout_marginTop="6dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@id/text_item"
               android:src="@drawable/icon_sos_used"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

    
</RelativeLayout>