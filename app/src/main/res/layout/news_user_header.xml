<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout android:layout_width="match_parent"   android:layout_marginTop="15dp"
                        android:paddingLeft="13dp" android:paddingRight="13dp"  android:gravity="center_vertical"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal" >
            <LinearLayout android:layout_width="wrap_content" android:orientation="horizontal"  android:layout_height="wrap_content">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_marginRight="10dp"
                              android:gravity="center_vertical"
                              android:layout_height="match_parent">
                    <com.dfsx.core.common.view.CircleButton
                            android:id="@+id/author_head_img"
                            android:src="@drawable/user_default_commend"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center_vertical"
                              android:layout_height="match_parent">
                    <TextView
                            android:textSize="15.0sp"
                            android:id="@+id/author_user_name"
                            android:textColor="@color/user_font_color"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="11"/>
                    <TextView
                            android:textSize="12.0sp"
                            android:layout_marginTop="4dp"
                            android:id="@+id/author_time_tx"
                            android:textColor="@color/video_w2_bankground"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="11"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                    android:id="@+id/cvideo_addatt_img"
                    android:layout_width="63dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/cviddeo_info_att"/>
        </RelativeLayout>

</RelativeLayout>

