<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.dfsx.lzcms.liveroom.view.RectangleRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ratio="0.47">

            <ImageView
                android:id="@+id/item_tv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.dfsx.lzcms.liveroom.view.RectangleRelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/item_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17dp"
                    android:textColor="@color/black_21"
                    android:textAppearance="@style/TextAppearance.BoldFont"
                    android:layout_toLeftOf="@+id/item_tv_size_text"
                    android:layout_marginRight="10dp"
                    android:text="啊啊啊啊"/>

                <TextView
                    android:id="@+id/item_tv_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black_21"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/item_tv_name"
                    android:text="共14集"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line_e0_color"/>

            <TextView
                android:id="@+id/item_tv_desc_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/gray_75"
                android:layout_marginTop="14dp"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>