<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/news_grid_item_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_shape_city_news_grid"
        >

        <com.dfsx.lzcms.liveroom.view.RectangleRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ratio="0.563">

            <ImageView
                android:id="@+id/item_news_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        </com.dfsx.lzcms.liveroom.view.RectangleRelativeLayout>

        <TextView
            android:id="@+id/item_news_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/black_33"
            android:paddingTop="7dp"
            android:lines="2"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:ellipsize="end"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/item_news_column_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5193ea"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:textSize="10dp"
                android:singleLine="true"
                android:text="栏目"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>

            <TextView
                android:id="@+id/item_news_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_ad"
                android:textSize="10dp"
                android:text="29分钟之前"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>