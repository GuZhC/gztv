<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:minHeight="45dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的账号"
                    android:textColor="#686868"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/my_account_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的账号"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/black_36"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:minHeight="45dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的余额"
                    android:textColor="#686868"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/my_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="156乐币"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/black_36"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:minHeight="45dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择充值"
                    android:textColor="#989898"
                    android:textSize="13sp"/>

            </LinearLayout>

            <com.dfsx.lzcms.liveroom.view.NoScrollGridView
                android:id="@+id/grid_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:scrollbars="none"/>

            <RadioGroup
                android:id="@+id/pay_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/pay_by_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="微信支付"
                    android:checked="true"
                    android:drawablePadding="5dp"
                    android:textColor="@drawable/pay_text_color"
                    android:drawableBottom="@drawable/pay_line"/>

                <RadioButton
                    android:id="@+id/pay_by_ali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="支付宝支付"
                    android:drawablePadding="5dp"
                    android:textColor="@drawable/pay_text_color"
                    android:drawableBottom="@drawable/pay_line"/>
            </RadioGroup>

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_btn_pay"
                android:text="立即充值"
                android:textSize="15sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>