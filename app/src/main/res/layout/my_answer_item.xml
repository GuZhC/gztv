<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/public_bgd"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"  android:orientation="vertical"      android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:background="@color/white"  android:paddingTop="18dp"  android:paddingBottom="14dp"  android:paddingLeft="13dp" android:paddingRight="13dp"   android:orientation="vertical" android:layout_height="wrap_content"
                >
                    <TextView
                            android:textSize="18.0sp"
                            android:textColor="@color/news_item_title_color"
                            android:ellipsize="end"
                            android:id="@+id/answer_list_item_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="3"/>


                    <LinearLayout
                            android:id="@+id/bottom_news_layout"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            >

                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/answer_list_item_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="11 "
                                    android:textSize="15.0sp"
                                    android:layout_marginRight="5dp"
                                    android:textColor="@color/lives_bottom_gray"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    />

                            <TextView
                                    android:textSize="17.0sp"
                                    android:text="我来回答"
                                    android:textColor="@color/public_red_bkg"
                                    android:gravity="bottom|left"
                                    android:id="@+id/answer_list_item_oper"
                                    android:layout_width="wrap_content"
                                    android:layout_marginRight="11dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    />

                        </RelativeLayout>

                    </LinearLayout>
    </LinearLayout>
        <LinearLayout android:layout_width="match_parent"   android:background="@color/COLOR_LINE_E9" android:layout_height="1dp"  />
        <LinearLayout android:layout_width="match_parent" android:layout_marginTop="5dp"  android:background="@color/COLOR_LINE_E9" android:layout_height="1dp"  />
    </LinearLayout>
</LinearLayout>
