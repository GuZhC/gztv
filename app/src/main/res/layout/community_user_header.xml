<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="match_parent"  android:paddingTop="15dp"    android:gravity="center_vertical"  android:orientation="horizontal" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                <LinearLayout android:layout_width="wrap_content"
                              android:orientation="horizontal"
                              android:layout_height="50dp">
                    <!--<LinearLayout android:layout_width="wrap_content"-->
                                  <!--android:layout_marginRight="10dp"-->
                                  <!--android:layout_height="wrap_content">-->
                        <com.dfsx.core.common.view.CircleButton
                                android:id="@+id/head_img"
                                android:src="@drawable/user_default_commend"
                                android:layout_width="38dp"
                                android:layout_marginRight="10dp"
                                android:layout_height="38dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"/>
                    <!--</LinearLayout>-->
                    <LinearLayout android:layout_width="wrap_content"
                                  android:orientation="vertical"
                                  android:paddingTop="2dp"
                                  android:layout_gravity="center_vertical"
                                  android:layout_height="match_parent">
                        <TextView
                                android:textSize="12.0sp"
                                android:id="@+id/replay_user_name"
                                android:textColor="@color/user_font_color"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="匿名"/>
                        <TextView
                                android:textSize="10.0sp"
                                android:layout_marginTop="4dp"
                                android:id="@+id/common_time"
                                android:textColor="@color/conmminty_time_color"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text=""/>
                    </LinearLayout>
                    <!--<LinearLayout android:layout_width="wrap_content" android:layout_marginLeft="10dp" android:layout_height="wrap_content">-->
                         <!--  等级  android:src="@drawable/grade_vip1"  -->
                        <ImageView
                                android:layout_width="wrap_content"
                                android:adjustViewBounds="true"
                                android:id="@+id/cmy_user_level"
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"/>
                    <!--</LinearLayout>-->
                </LinearLayout>
            </RelativeLayout>
            <!--<RelativeLayout android:layout_width="wrap_content"-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:gravity="center_vertical"-->
                            <!--android:layout_height="wrap_content">-->
        <ImageView
                android:layout_width="50dp"
                android:id="@+id/common_guanzhu_tx"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/commuity_att_normal"
                android:layout_centerVertical="true"/>
            <!--</RelativeLayout>-->
    </RelativeLayout>
</LinearLayout>

