<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.dfsx.core.common.view.banner.SimpleImageBanner
            xmlns:banner="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:id="@+id/simple_img_banner"
            banner:bb_barColor="@color/black_50a"
            banner:bb_indicatorGap="5dp"
            banner:bb_textSize="14sp"
            android:visibility="gone"
            banner:bb_textColor="@color/white"
            banner:bb_indicatorGravity="TOP"
            banner:bb_isIndicatorShow="true"
            banner:bb_indicatorSelectColor="@color/public_purple_bkg"
            banner:bb_indicatorUnselectColor="@color/white">
    </com.dfsx.core.common.view.banner.SimpleImageBanner>

    <LinearLayout android:layout_width="match_parent" android:paddingLeft="23dp" android:paddingRight="23dp" android:layout_height="wrap_content">
        <HorizontalScrollView
                android:id="@+id/hsv_view"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:fadingEdgeLength="0dp"
                android:overScrollMode="never"
                android:scrollbars="none">
            <LinearLayout
                    android:id="@+id/hsv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"/>

        </HorizontalScrollView>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/emergency_container"
                  android:background="#f8f8f8"
                  android:paddingTop="5dp"
                  android:visibility="gone"
                  android:paddingBottom="5dp"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="66dp">
        
        <ImageView android:id="@+id/image_emergency"
                   android:layout_width="74dp"
                   android:background="@color/white"
                   android:scaleType="centerInside"
                   android:src="@drawable/bg_emergency_radio"
                   android:layout_height="match_parent"/>

        <ViewFlipper android:id="@+id/flipper_text"
                     android:background="@color/white"
                     android:layout_marginStart="1dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>