<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:layout_height="wrap_content"> <!--android:descendantFocusability="blocksDescendants"-->

    <LinearLayout android:layout_width="match_parent"   android:background="@color/white"  android:paddingLeft="13dp" android:paddingRight="13dp" android:paddingTop="10dp"   android:paddingBottom="14dp" android:orientation="vertical" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/news_list_item_title"
                    android:maxLines="2"
                    android:gravity="left|top"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/news_item_title_color"
                    android:textSize="18.0sp"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
           >
            <FrameLayout
                    android:id="@+id/video_container"
                    android:layout_width="match_parent"
                    android:layout_height="204dp"
                    android:background="@color/black">
                <RelativeLayout android:id="@+id/forground_bank"   android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView
                            android:id="@+id/item_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                    <ImageButton android:layout_width="40dp" android:id="@+id/item_video_mark"  android:layout_centerInParent="true" android:scaleType="centerCrop"   android:layout_height="40dp" android:src="@drawable/icon_list_play"  android:background="@null"/>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"   android:layout_marginTop="10dp"  android:paddingBottom="14dp"
                      android:background="@color/white"  android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <ImageView
                        android:id="@+id/item_live_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="20.5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_back_live"/>

                <TextView
                        android:id="@+id/news_live_viewcont_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_alignTop="@+id/item_live_type_text"
                        android:layout_alignBottom="@+id/item_live_type_text"
                        android:layout_toRightOf="@+id/item_live_type_text"
                        android:gravity="center"
                        android:text="1456参与"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="13sp"
                        android:background="@drawable/bg_text_visitor_num"
                        android:textColor="@color/white"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:background="@color/gray_303_bg"  android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>