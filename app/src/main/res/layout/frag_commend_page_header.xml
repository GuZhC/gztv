<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"  android:orientation="vertical">
        <!--<include layout="@layout/white_top_bar_layout"  />-->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:background="@color/white">

            <RelativeLayout android:layout_width="40dp"  android:layout_alignParentLeft="true"
                            android:id="@+id/back_finish_view"
                            android:layout_height="match_parent">
                <ImageView
                        android:layout_width="11dp"
                        android:layout_centerInParent="true"
                        android:layout_height="11dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/news_commend_page_back"/>
            </RelativeLayout>


            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复"
                    android:textSize="17sp"
                    android:textColor="@color/COLOR_51"
                    android:layout_centerInParent="true"/>

            <TextView
                    android:id="@+id/right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/gray_a9"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:background="@color/line_e9_color"
                android:layout_height="1dp"/>
        <!--<include layout="@layout/community_replay_item"  />-->
        <include layout="@layout/nc_commend_replay_item"   />
        <View android:layout_width="match_parent"  android:visibility="visible" android:layout_height="5dp"   android:background="@color/white"  />
        <TextView android:layout_width="match_parent"  android:paddingLeft="5dp"  android:layout_marginTop="23dp"  android:layout_marginBottom="23dp" android:textSize="15.0sp" android:textColor="@color/COLOR_51"  android:text="Ta的评论" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>