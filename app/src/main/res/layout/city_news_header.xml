<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_city_header_info">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_circle_city"
                android:layout_gravity="center_horizontal"
                android:padding="3dp">

                <com.dfsx.core.common.view.CircleImageView
                    android:id="@+id/city_image_view"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/icon_default_logo"
                    android:scaleType="centerCrop"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/city_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="蛇啊啊啊"
                android:textSize="14dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/city_info_intro_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:minLines="4"
            android:gravity="left|top"
            android:ellipsize="end"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            android:text="aaa"/>
    </LinearLayout>
</LinearLayout>