<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- android:background="@drawable/news_list_background_xml" -->
    <LinearLayout android:layout_width="match_parent"  android:orientation="vertical" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"  android:background="@color/white" android:orientation="vertical" android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@id/news_list_item_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.0dip"
            android:layout_centerVertical="true">

        <RelativeLayout
                android:id="@+id/pg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@id/news_news_list_item_image"
                    android:background="@drawable/glide_default_image"
                    android:layout_width="126dp"
                    android:layout_height="82dp"
                    android:scaleType="fitXY"/>
            <!--android:layout_marginLeft="5.0dip"-->
            <!--android:layout_marginTop="5.0dip"-->
<!---->
            <ImageView
                    android:src="@drawable/video_icon_item"
                    android:layout_alignBottom="@+id/news_news_list_item_image"
                    android:layout_alignLeft="@+id/news_news_list_item_image"
                    android:layout_width="32dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@id/news_list_item_title_layout"
                android:layout_marginTop="3.0dip"
                android:layout_height="85dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_toRightOf="@+id/pg_layout"
                android:layout_alignParentRight="true">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/new_video_bottm">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="16.0sp"
                            android:textColor="@drawable/news_title_color_xml"
                            android:ellipsize="end"
                            android:id="@id/news_list_item_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"/>
                    <!--  -->
                    <TextView
                            android:textSize="11.0sp"
                            android:text=""
                            android:textColor="@drawable/news_content_color_xml"
                            android:ellipsize="end"
                            android:id="@id/news_list_item_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6.0dip"
                            android:maxLines="3"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/new_video_bottm"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                <TextView
                        android:textSize="12.0sp"
                        android:text="来源：文山TV"
                        android:textColor="@color/lives_bottom_gray"
                        android:gravity="bottom|left"
                        android:id="@id/news_list_item_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"/>

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_alignParentRight="true">

                    <TextView
                            android:textSize="12.0sp"
                            android:text="3453跟帖"
                            android:layout_toLeftOf="@+id/news_pinglunimg"
                            android:gravity="center"
                            android:textColor="@color/lives_bottom_gray"
                            android:id="@+id/news_list_item_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/news_pinglunimg"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/news_reply"
                            android:layout_marginLeft="4.0dip"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <!--<TextView android:textSize="10.0sp" android:text="3453跟帖"  android:visibility="gone" android:background="@drawable/bookmark_small"  android:gravity="center"  android:textColor="@drawable/news_content_bottom_xml"   android:id="@id/news_list_item_time" android:layout_width="65dp" android:layout_height="15dp"   android:layout_alignParentRight="true" />-->
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
<LinearLayout android:layout_width="match_parent"  android:background="@color/gray_303_bg" android:layout_height="4dp"  />
        </LinearLayout>
</RelativeLayout>
