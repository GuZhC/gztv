<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/bkg_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bg_qian_dao"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/bkg_image_view"
            android:layout_alignRight="@+id/bkg_image_view"
            android:layout_alignLeft="@+id/bkg_image_view"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qian_dao_day_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="22dp"
                android:layout_marginRight="5dp"
                android:textColor="#f9466e"
                android:textAppearance="@style/TextAppearance.BoldFont"
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="æ—¥"
                android:textSize="11dp"
                android:layout_marginRight="10dp"
                android:textColor="#f9466e"
                android:textAppearance="@style/TextAppearance.BoldFont"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_qian_dao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_qian_dao"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>