<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/background_dark"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <SurfaceView
                    android:id="@+id/surfaceview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
        </FrameLayout>

        <RelativeLayout android:layout_width="match_parent" android:gravity="center_vertical" android:paddingLeft="10dp"  android:background="@color/black_50a" android:layout_alignParentTop="true"   android:layout_height="40dp">
            <TextView android:id="@+id/recond_times_txt"   android:layout_width="wrap_content"   android:layout_alignParentLeft="true"  android:gravity="center" android:textSize="13.0sp"  android:textColor="@color/white"   android:layout_height="wrap_content"  android:text="00:00:00"/>
        </RelativeLayout>

        <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                />

    </RelativeLayout>
