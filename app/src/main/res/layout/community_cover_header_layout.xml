<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.dfsx.core.common.view.banner.SimpleImageBanner
            xmlns:banner="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:id="@+id/simple_img_banner"
            banner:bb_barColor="@color/black_50a"
            banner:bb_indicatorGap="5dp"
            banner:bb_textSize="14sp"
            banner:bb_textColor="@color/white"
            banner:bb_indicatorGravity="TOP"
            banner:bb_isIndicatorShow="true"
            banner:bb_indicatorSelectColor="@color/public_purple_bkg"
            banner:bb_indicatorUnselectColor="@color/white">
    </com.dfsx.core.common.view.banner.SimpleImageBanner>>
    <ImageView
            android:id="@+id/hsv_content"
            android:layout_width="51dp"
            android:layout_height="21dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/community_top_bar"
            ></ImageView>
</LinearLayout>