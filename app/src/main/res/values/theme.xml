<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CCWTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:windowAnimationStyle">@style/CCWWindowAnimationStyle</item>
        <item name="android:textAppearanceLarge">@style/CCWTextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/CCWTextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/CCWTextAppearanceSmall</item>
        <item name="android:editTextStyle">@style/CCWEditTextStyle</item>
        <item name="android:buttonStyle">@style/CCWButtonStyle</item>
        <item name="android:checkboxStyle">@style/CCWCheckBoxStyle</item>
    </style>

    <style name="CCWDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textAppearanceLarge">@style/CCWTextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/CCWTextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/CCWTextAppearanceSmall</item>
        <item name="android:editTextStyle">@style/CCWEditTextStyle</item>
        <item name="android:buttonStyle">@style/CCWButtonStyle</item>
        <item name="android:checkboxStyle">@style/CCWCheckBoxStyle</item>
    </style>

    <style name="CCWFullScreenDialogTheme" parent="CCWDialogTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CCWWindowAnimationStyle" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="CCWTextAppearanceLarge" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <style name="CCWTextAppearanceMedium" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <style name="CCWTextAppearanceSmall" parent="android:TextAppearance.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

