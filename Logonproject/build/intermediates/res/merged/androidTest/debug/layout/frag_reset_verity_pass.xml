<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <LinearLayout android:layout_width="match_parent" android:orientation="vertical"
                  android:paddingTop="10dp"
                  android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"  android:visibility="gone" android:paddingLeft="16dp" android:paddingRight="12dp"
                        android:layout_height="wrap_content">
            <ImageView android:layout_width="9dp" android:layout_centerVertical="true"
                       android:layout_alignParentLeft="true" android:layout_height="14dp"
                       android:background="@drawable/reg_ver_left_back"/>
            <TextView android:layout_width="wrap_content" android:layout_centerInParent="true"
                      android:layout_height="wrap_content" android:text="重置密码" android:textSize="17.0sp"
                      android:textColor="@color/news_title_color"
            />
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_marginTop="10dp" android:gravity="center_horizontal"
                      android:orientation="vertical" android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/mail_edittext"
                    android:layout_width="305dp"
                    android:layout_height="48dp"
                    android:paddingLeft="15dp"
                    android:textSize="15.0sp"
                    android:visibility="gone"
                    android:textColor="@color/news_title_color"
                    android:background="@color/comment_op_background"
                    android:hint="中国大陆(+86)"/>

            <EditText
                    android:id="@+id/pa_v_telpe_edt"
                    android:layout_width="305dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="17dp"
                    android:numeric="integer"
                    android:textSize="15.0sp"
                    android:textColor="@color/news_title_color"
                    android:background="@color/comment_op_background"
                    android:hint="请输入手机号"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:gravity="center_horizontal"
                      android:orientation="horizontal" android:layout_marginTop="13dp"
                      android:layout_height="48dp">
            <EditText
                    android:id="@+id/pa_v_edt"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="17dp"
                    android:layout_marginRight="6dp"
                    android:numeric="integer"
                    android:textSize="15.0sp"
                    android:textColor="@color/news_title_color"
                    android:background="@color/comment_op_background"
                    android:hint="请输入验证码"/>
            <TextView android:layout_width="155dp"  android:id="@+id/pa_v_get_btn" android:layout_centerVertical="true"
                      android:background="@color/public_purple_bkg"
                      android:textColor="@color/white" android:textSize="15.0sp"
                      android:gravity="center" android:text="获取"
                      android:layout_height="match_parent"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:orientation="vertical"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="17dp"
                      android:textColor="@color/comment_op_background" android:text="手机号只负责安全验证，不会泄露个人信息" android:textSize="15.0sp"
                      android:gravity="center"/>

            <TextView android:layout_width="305dp"  android:id="@+id/pa_v_comfirm_btn" android:layout_height="48dp" android:layout_marginTop="17dp"
                      android:background="@color/button_enable_color" android:layout_gravity="center_horizontal"
                      android:textColor="@color/white" android:text="确认" android:textSize="17.0sp"
                      android:gravity="center"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
