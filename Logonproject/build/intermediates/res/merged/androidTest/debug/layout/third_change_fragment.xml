<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <LinearLayout android:layout_width="match_parent" android:paddingLeft="13dp" android:paddingRight="13dp"
                  android:orientation="vertical" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:gravity="center_vertical"
                        android:layout_height="50dp">
            <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:id="@+id/img1"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/person_wexij_samll"/>
            <TextView
                    style="@style/headTitleThema"
                    android:id="@+id/th_weixin_name"
                    android:layout_toRightOf="@+id/img1"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text=""/>
            <ImageView
                    android:id="@+id/th_weixin_oper"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                   />
        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/person_bankground_color"  />

        <RelativeLayout android:layout_width="match_parent" android:gravity="center_vertical"
                        android:layout_height="50dp">
            <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:id="@+id/img2"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/person_qq_samll"/>
            <TextView
                    style="@style/headTitleThema"
                    android:id="@+id/th_qq_name"
                    android:layout_toRightOf="@+id/img2"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text=""/>
            <ImageView
                    android:id="@+id/th_qq_oper"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/person_bankground_color"  />


        <RelativeLayout android:layout_width="match_parent" android:gravity="center_vertical"
                        android:layout_height="50dp">
            <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:id="@+id/img3"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/person_weibo_samll"/>
            <TextView
                    style="@style/headTitleThema"
                    android:id="@+id/th_weibo_name"
                    android:layout_toRightOf="@+id/img3"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text=""/>
            <ImageView
                    android:id="@+id/th_weibo_oper"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
