<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

           <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/date_view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp">

                <com.andrew.datechoosewheelviewdemo.widget.WheelView
                        android:id="@+id/year_wv"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:background="@android:color/holo_green_dark"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                />

                <com.andrew.datechoosewheelviewdemo.widget.WheelView
                        android:id="@+id/date_wv"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:background="@android:color/holo_red_dark"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                />

                <com.andrew.datechoosewheelviewdemo.widget.WheelView
                        android:id="@+id/day_wv"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                />
            </LinearLayout>
               <!--<View android:layout_width="match_parent"    android:layout_height="30dp"-->
                      <!--android:background="@color/white"  android:layout_alignParentTop="true"  />-->
               <!--<View android:layout_width="match_parent"    android:layout_height="30dp"-->
                     <!--android:background="@color/red"  android:layout_alignParentBottom="true"  />-->
           </RelativeLayout>
        <Button
                android:layout_width="match_parent"
                android:text="确定"
                android:id="@+id/sure_btn"
                android:background="@color/public_purple_bkg"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_height="35dp"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/E:/workspace/idea/gztv/Logonproject/src/main/res/layout/item_time_popupwindow_layout.xml --><!-- From: file:/E:/workspace/idea/gztv/Logonproject/build/intermediates/bundles/debug/res/layout/item_time_popupwindow_layout.xml -->