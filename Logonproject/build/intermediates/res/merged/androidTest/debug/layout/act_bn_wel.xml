<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/comment_background">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"    >
        <LinearLayout android:layout_width="match_parent"  android:orientation="vertical"
                      android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent"  android:visibility="gone" android:paddingLeft="16dp" android:paddingRight="12dp"
                            android:layout_height="wrap_content">
                <ImageView android:layout_width="9dp"  android:id="@+id/back_btn"   android:layout_centerVertical="true"
                           android:layout_alignParentLeft="true" android:layout_height="14dp"
                           android:background="@drawable/reg_ver_left_back"/>
                <TextView android:layout_width="wrap_content" android:layout_centerInParent="true"
                          android:layout_height="wrap_content" android:text="登录" android:textSize="17.0sp"
                          android:textColor="@color/news_title_color" />
                <TextView android:layout_width="54dp"  android:id="@+id/logon_register_btn" android:layout_centerVertical="true"
                           android:layout_alignParentRight="true" android:layout_height="27dp"
                           android:gravity="center"  android:text="注册"  android:textColor="@color/white"  android:textSize="13.0sp"
                           android:background="@color/public_purple_bkg"/>
            </RelativeLayout>

            <ImageView android:layout_width="540dp"   android:layout_centerVertical="true"
                       android:layout_height="218dp"
                       android:background="@drawable/wel_top_bankground"
                      />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"  android:layout_marginTop="42dp" android:layout_centerInParent="true" android:gravity="center_horizontal"
                      android:orientation="vertical" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/logo_telephont_edt"
                    android:layout_width="305dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:textSize="15.0sp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_btn_blue"
                    android:text="登陆"/>


            <TextView
                    android:id="@+id/logon_pass_edt"
                    android:layout_width="305dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textSize="15.0sp"
                    android:textColor="@color/public_purple_bkg"
                    android:background="@drawable/shape_btn_white"
                    android:text="注册"/>

            <TextView android:layout_width="wrap_content"   android:id="@+id/logon_forget_btn" android:layout_height="wrap_content" android:layout_marginTop="26dp"
                      android:textColor="#757575" android:text="稍后登陆" android:textSize="15.0sp"
                      android:gravity="center"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"  android:gravity="center_horizontal" android:orientation="vertical"  android:layout_marginBottom="32dp" android:layout_alignParentBottom="true"  android:layout_height="wrap_content">
            <ImageView android:layout_width="191dp"   android:layout_centerVertical="true"
                        android:layout_height="12dp"
                       android:layout_marginBottom="29dp"
                       android:src="@drawable/other_logon_mark"/>
            <include layout="@layout/bar_share_layout"   />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
