<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:paddingTop="18dp">
        <RelativeLayout android:layout_width="match_parent" android:orientation="vertical"
                        android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:orientation="vertical"
                          android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="match_parent" android:paddingLeft="16dp"
                                android:paddingRight="12dp"
                                android:layout_height="wrap_content">
                    <ImageView android:layout_width="14dp" android:id="@+id/wel_back_btn"
                               android:layout_centerVertical="true"
                               android:layout_alignParentLeft="true" android:layout_height="14dp"
                               android:background="@drawable/reg_wel_close"/>
                    <!--<ImageView android:layout_width="54dp"  android:id="@+id/reg_logon_btn" android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentRight="true" android:layout_height="27dp"-->
                    <!--android:background="@drawable/reg_wel_logon"/>-->

                    <TextView android:layout_width="54dp" android:id="@+id/reg_logon_btn"
                              android:layout_centerVertical="true"
                              android:layout_alignParentRight="true" android:layout_height="27dp"
                              android:gravity="center" android:text="登陆" android:textColor="@color/white"
                              android:textSize="13.0sp"
                              android:background="@color/public_purple_bkg"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_marginTop="13dp"
                                android:layout_height="wrap_content">
                    <ImageView android:layout_width="115dp" android:layout_centerInParent="true"
                               android:layout_centerVertical="true"
                               android:layout_height="27dp" android:background="@drawable/reg_wel_reg"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_marginTop="13dp"
                                android:layout_height="wrap_content">
                    <ImageView android:layout_width="298dp" android:layout_centerVertical="true"
                               android:layout_centerInParent="true" android:layout_height="206dp"
                               android:background="@drawable/reg_wel_bk"/>
                </RelativeLayout>
                <LinearLayout android:layout_width="match_parent" android:gravity="center_horizontal"
                              android:orientation="vertical" android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/wel_area_edt"
                            android:layout_width="305dp"
                            android:visibility="gone"
                            android:layout_height="48dp"
                            android:paddingLeft="15dp"
                            android:textSize="15.0sp"
                            android:textColor="@color/news_title_color"
                            android:background="@color/comment_op_background"
                            android:hint="中国大陆(+86)"/>

                    <com.dfsx.core.common.view.ClearEditText
                            android:id="@+id/wel_telephone_edt"
                            android:layout_width="305dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="7dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="17dp"
                            android:numeric="integer"
                            android:drawableRight="@drawable/reg_wel_clear"
                            android:textSize="15.0sp"
                            android:textColor="@color/news_title_color"
                            android:background="@color/comment_op_background"
                            android:hint="请输入手机号"/>

                    <TextView android:layout_width="305dp" android:id="@+id/get_verift_btn" android:layout_height="48dp"
                              android:layout_marginTop="17dp" android:background="@color/button_enable_color"
                              android:textColor="@color/white" android:text="获取验证码" android:textSize="17.0sp"
                              android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_marginBottom="33dp"
                        android:layout_alignParentBottom="true" android:layout_height="wrap_content">
            <include layout="@layout/bar_share_layout"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
