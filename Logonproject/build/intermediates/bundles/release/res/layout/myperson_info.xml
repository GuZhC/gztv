<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/person_bankground_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/person_bottom_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white">

                 <RelativeLayout android:layout_width="48dp"   android:id="@+id/back_finish_per" android:layout_height="48dp">
                     <ImageView
                             android:background="@null"
                             android:layout_width="35dp"
                             android:layout_height="35dp"
                             android:layout_centerInParent="true"
                             android:scaleType="center"
                             android:src="@drawable/icon_arrow_left"/>

                 </RelativeLayout>



                <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人资料"
                        android:textSize="17sp"
                        android:textColor="#363636"
                        android:layout_centerInParent="true"/>

                <TextView
                        android:id="@+id/right_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="保存"
                        android:textSize="16sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/button_enable_color"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/gray_303_bg"/>

            <LinearLayout
                android:id="@+id/person_head_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="8dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/person_imgt_tx"
                        style="@style/headImagThema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/head_arrow"
                        android:text="更改头像"/>

                    <ImageView
                        android:id="@+id/head_arrow"
                        android:layout_width="8dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/enter_icon"/>

                    <com.dfsx.core.common.view.CircleButton
                        android:id="@+id/person_img_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_defalut_no_login_logo"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_303_bg"/>

            <LinearLayout
                android:id="@+id/person_name_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <!--<ImageView  android:id="@+id/person_name_img" android:background="@mipmap/person_name" android:layout_width="14dp" android:layout_alignParentLeft="true"  android:layout_height="15dp"  android:layout_centerVertical="true" />-->
                    <TextView
                        android:id="@+id/person_name"
                        style="@style/headTitleThema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="昵称"/>

                    <ImageView
                        android:id="@+id/name_arrow"
                        android:layout_width="8dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/enter_icon"/>

                    <TextView
                        android:id="@+id/person_nick_tx"
                        style="@style/headMessageThema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/name_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_303_bg"/>

            <LinearLayout
                android:id="@+id/person_sex_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <!--<ImageView  android:id="@+id/person_sex_img" android:background="@mipmap/person_sex" android:layout_width="14dp" android:layout_alignParentLeft="true"  android:layout_height="15dp"  android:layout_centerVertical="true" />-->
                    <TextView
                        android:id="@+id/person_sex"
                        style="@style/headTitleThema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="性别"/>

                    <ImageView
                        android:id="@+id/sex_arrow"
                        android:layout_width="8dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/enter_icon"/>

                    <TextView
                        android:id="@+id/person_sex_tx"
                        style="@style/headMessageThema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/sex_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_303_bg"/>

            <LinearLayout
                android:id="@+id/person_area_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <!--<ImageView  android:id="@+id/person_sex_img" android:background="@mipmap/person_sex" android:layout_width="14dp" android:layout_alignParentLeft="true"  android:layout_height="15dp"  android:layout_centerVertical="true" />-->
                    <TextView
                        android:id="@+id/person_area"
                        style="@style/headTitleThema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="地区"/>

                    <ImageView
                        android:id="@+id/area_arrow"
                        android:layout_width="8dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/enter_icon"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/person_area_tx"
                        style="@style/headMessageThema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/area_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_303_bg"/>

            <LinearLayout
                android:id="@+id/person_sign_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <!--<ImageView  android:id="@+id/person_sex_img" android:background="@mipmap/person_sex" android:layout_width="14dp" android:layout_alignParentLeft="true"  android:layout_height="15dp"  android:layout_centerVertical="true" />-->
                    <TextView
                        android:id="@+id/person_sign"
                        style="@style/headTitleThema"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="个性签名"/>

                    <ImageView
                        android:id="@+id/sign_arrow"
                        android:layout_width="8dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/enter_icon"/>

                    <TextView
                        android:id="@+id/person_sign_tx"
                        style="@style/headMessageThema"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/person_sign"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/sign_arrow"
                        android:ellipsize="end"
                        android:singleLine="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/gray_303_bg"/>

            <LinearLayout
                android:id="@+id/person_accreditation_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <!--<ImageView  android:id="@+id/person_mail_img" android:background="@mipmap/person_mail" android:layout_width="14dp" android:layout_alignParentLeft="true"  android:layout_height="15dp"  android:layout_centerVertical="true" />-->
                    <TextView
                        android:id="@+id/person_accreditation"
                        style="@style/headTitleThema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="认证"/>

                    <ImageView
                        android:id="@+id/accreditation_arrow"
                        android:layout_width="8dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:visibility="gone"
                        android:background="@drawable/enter_icon"/>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/accreditation_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"

                        android:background="@drawable/already_accreditation"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/person_password_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_303_bg"/>

                <LinearLayout
                    android:id="@+id/person_pwd_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <!--<ImageView  android:id="@+id/person_pwd_img" android:background="@mipmap/person_mail" android:layout_width="14dp" android:layout_alignParentLeft="true"  android:layout_height="15dp"  android:layout_centerVertical="true" />-->
                        <TextView
                            android:id="@+id/person_pwd"
                            style="@style/headTitleThema"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="更改密码"/>

                        <ImageView
                            android:id="@+id/pwd_arrow"
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/enter_icon"/>
                        <!--<TextView  android:id="@+id/person_pwd_tx"      style="@style/headMessageThema"   android:layout_marginRight="11dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_toLeftOf="@+id/pwd_arrow" android:layout_centerVertical="true" />-->
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_303_bg"/>

            <LinearLayout
                android:id="@+id/person_mail_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <!--<ImageView  android:id="@+id/person_mail_img" android:background="@mipmap/person_mail" android:layout_width="14dp" android:layout_alignParentLeft="true"  android:layout_height="15dp"  android:layout_centerVertical="true" />-->
                    <TextView
                        android:id="@+id/person_mail"
                        style="@style/headTitleThema"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="更改邮箱"/>

                    <TextView
                            android:id="@+id/telephone_btn"
                            style="@style/headTitleThema"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="更改手机号"/>

                    <ImageView
                        android:id="@+id/mail_arrow"
                        android:layout_width="8dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/enter_icon"/>

                    <TextView
                        android:id="@+id/person_telephone_tx"
                        style="@style/headMessageThema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/mail_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tail_line"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/person_logout_tx"
            style="@style/headMessageThema"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:gravity="center"
            android:text="退出登录"/>
    </RelativeLayout>
</RelativeLayout>

