<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/person_bankground_color">


    <LinearLayout android:layout_width="match_parent" android:orientation="vertical"
                  android:paddingLeft="13dp"
                  android:paddingRight="13dp"
                  android:paddingTop="20dp"
                  android:layout_height="wrap_content">

        <!--<TextView android:layout_width="wrap_content"-->
                  <!--android:textSize="15.0sp"-->
                  <!--android:id="@+id/add_sel_btn"-->
                  <!--android:textColor="@color/gray_75"-->
                  <!--android:text="点击选择地区"-->
                  <!--android:paddingLeft="6dp"-->
                  <!--android:drawablePadding="5dp"-->
                  <!--android:paddingRight="6dp"-->
                  <!--android:paddingTop="5dp"-->
                  <!--android:paddingBottom="5dp"-->
                  <!--android:drawableLeft="@drawable/disclure_local_mmark"-->
                  <!--android:background="@drawable/act_info_address_bg"-->
                  <!--android:layout_height="wrap_content"/>-->


        <LinearLayout
                android:id="@+id/person_password_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_303_bg"/>

            <LinearLayout
                    android:id="@+id/person_area_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp">

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                    <TextView
                            android:id="@+id/person_pwd"
                            style="@style/headTitleThema"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="选择区域"/>


                    <TextView android:layout_width="wrap_content"
                              android:textSize="15.0sp"
                              android:id="@+id/add_sel_btn"
                              android:textColor="@color/gray_75"
                              android:text="点击编辑区域"
                              android:gravity="right"
                              android:paddingLeft="6dp"
                              android:paddingRight="6dp"
                              android:layout_toLeftOf="@+id/pwd_arrow"
                              android:layout_toRightOf="@+id/person_pwd"
                              android:background="@drawable/act_info_address_bg"
                              android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/pwd_arrow"
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/enter_icon"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <EditText
                android:id="@+id/address_edittext"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="left|top"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:hint="请输入详细地址"
        />

    </LinearLayout>


</LinearLayout>
