<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
              android:background="@color/white"
    android:layout_height="match_parent">

   <RelativeLayout android:layout_width="match_parent"   android:layout_height="match_parent">

       <ScrollView android:layout_width="match_parent" android:scrollbars="vertical" android:layout_height="match_parent"
                   android:layout_alignParentTop="true" android:layout_alignParentStart="true">
       <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent" android:background="@color/COLOR_f7f9"
                          android:layout_height="wrap_content"  android:layout_alignParentTop="true">
                <com.dfsx.core.common.view.banner.SimpleImageBanner
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:banner="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/shop_simple_img_banner"
                        android:background="@color/COLOR_f7f9"
                        banner:bb_indicatorGap="5dp"
                        banner:bb_textSize="14sp"
                        banner:bb_textColor="@color/white"
                        banner:bb_indicatorGravity="CENTER"
                        banner:bb_indicatorSelectColor="@android:color/transparent"
                        banner:bb_indicatorUnselectColor="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_marginTop="23dp"  android:orientation="vertical"  android:paddingLeft="14dp" android:paddingRight="14dp"  android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:text="App  Watch"
                          android:id="@+id/shop_name_txt"
                          android:gravity="left"
                          android:textColor="@color/COLOR_2E"
                          android:textSize="19.0sp"
                          android:layout_height="match_parent"/>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="13dp"
                                android:layout_height="wrap_content">
                    <ImageView    android:layout_width="16dp"
                                  android:background="@null"
                                  android:layout_centerVertical="true"
                                  android:id="@+id/money_icon"
                            android:src="@drawable/shopinfo_head_mony" android:layout_height="13dp"  />

                    <TextView android:layout_width="wrap_content"
                              android:text="12456"
                              android:layout_toRightOf="@+id/money_icon"
                              android:layout_marginLeft="5dp"
                              android:id="@+id/shop_price_txt"
                              android:textColor="@color/public_red_bkg"
                              android:textSize="13.0sp"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              android:text="45人兑换"
                              android:id="@+id/shop_buypeople_txt"
                              android:textColor="@color/gray_b5"
                              android:textSize="13.0sp"
                              android:layout_toLeftOf="@+id/shop_reamain_txt"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              android:text=""
                              android:layout_marginLeft="10dp"
                              android:id="@+id/shop_reamain_txt"
                              android:textColor="@color/gray_b5"
                              android:textSize="13.0sp"
                              android:layout_alignParentRight="true"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="20dp"
                          android:gravity="left"
                          android:layout_marginLeft="10dp"
                          android:id="@+id/shop_meassge_content"
                          android:textColor="@color/COLOR_2E"
                          android:textSize="16.0sp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
           </LinearLayout>
       </ScrollView>

       <Button android:id="@+id/shop_exchange_btn"   android:layout_width="match_parent"
               android:textColor="@color/white"  android:textSize="13.0sp"
               android:layout_alignParentBottom="true"
               android:background="@color/public_red_bkg" android:layout_height="42dp" android:text="即刻兑换" />
   </RelativeLayout>
</LinearLayout>