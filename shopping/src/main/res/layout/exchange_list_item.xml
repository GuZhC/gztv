<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:background="@color/white"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"   android:background="@color/COLOR_f7f9"  android:paddingLeft="13dp" android:paddingRight="7dp" android:orientation="vertical" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:paddingLeft="15dp" android:paddingRight="13dp"  android:paddingBottom="10dp" android:paddingTop="10dp" android:layout_height="wrap_content">
                 <LinearLayout android:layout_width="wrap_content" android:gravity="left"  android:layout_toLeftOf="@+id/ex_cright_view" android:layout_alignParentLeft="true"   android:orientation="horizontal" android:layout_height="50dp">
                     <ImageView
                             android:id="@+id/shop_thumb_image"
                             android:src="@drawable/glide_default_image"
                             android:layout_width="43dp"
                             android:layout_height="43dp"
                             android:layout_alignParentLeft="true"
                             android:layout_centerVertical="true"/>
                     <LinearLayout android:layout_width="wrap_content"
                                   android:orientation="vertical" android:layout_marginLeft="20dp"
                                   android:layout_height="wrap_content">
                         <TextView
                                 android:id="@+id/shop_item_title"
                                 android:singleLine="true"
                                 android:text="12"
                                 android:ellipsize="end"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:textColor="@color/news_item_title_color"
                                 android:textSize="14.0sp"
                                 />

                         <LinearLayout android:layout_width="wrap_content"  android:layout_marginTop="10dp" android:orientation="horizontal"
                                       android:layout_height="wrap_content">

                             <ImageView    android:layout_width="16dp"
                                           android:background="@null"
                                           android:id="@+id/money_icon"
                                           android:src="@drawable/shopinfo_head_mony" android:layout_height="13dp"  />

                             <TextView android:layout_width="wrap_content"
                                       android:text="11"
                                       android:layout_marginLeft="5dp"
                                       android:gravity="center"
                                       android:id="@+id/shop_ingo_meney"
                                       android:textColor="@color/public_red_bkg"
                                       android:textSize="13.0sp"
                                       android:layout_height="wrap_content"/>

                         </LinearLayout>
                     </LinearLayout>
                 </LinearLayout>

                <LinearLayout android:layout_width="wrap_content"  android:layout_marginLeft="5dp" android:id="@+id/ex_cright_view"  android:gravity="center" android:layout_alignParentRight="true" android:orientation="vertical" android:layout_height="50dp">
                    <ImageView    android:layout_width="55dp"
                                  android:background="@null"
                                  android:id="@+id/shop_exchange_status"
                                  android:src="@drawable/ex_shop_ing" android:layout_height="23dp"  />

                    <TextView android:layout_width="wrap_content"  android:layout_marginTop="10dp"
                              android:text=""
                              android:id="@+id/shop_exchange_time"
                              android:textColor="@color/gray_b5"
                              android:textSize="14.0sp"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:background="@color/white"  android:layout_height="10dp"/>
</LinearLayout>