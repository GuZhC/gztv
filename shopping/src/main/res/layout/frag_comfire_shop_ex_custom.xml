<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
              android:background="@color/slider_menu_background_color"
    android:layout_height="match_parent">

   <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
           <ScrollView android:layout_width="match_parent" android:layout_above="@+id/comshop_exchange_btn" android:scrollbars="vertical" android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:paddingBottom="20dp"  android:orientation="vertical" android:layout_height="wrap_content"  android:layout_alignParentTop="true">
                <RelativeLayout android:layout_width="match_parent"  android:paddingLeft="23dp"  android:paddingRight="13dp"
                                android:orientation="horizontal" android:paddingTop="5dp"  android:paddingBottom="5dp"  android:background="@color/COLOR_LINE_E9"  android:gravity="center_vertical" android:layout_height="wrap_content">
                    <ImageView    android:layout_width="72dp"
                                  android:layout_height="72dp"
                                  android:background="@null"
                                  android:layout_centerVertical="true"
                                  android:id="@+id/c_shop_image"
                                  android:layout_alignParentLeft="true"
                                  android:src="@drawable/glide_default_image" />

                    <TextView android:layout_width="wrap_content"
                              android:text=""
                              android:gravity="center"
                              android:layout_toRightOf="@+id/c_shop_image"
                              android:layout_marginLeft="25dp"
                              android:id="@+id/c_shop_name"
                              android:textColor="@color/COLOR_2E"
                              android:layout_centerVertical="true"
                              android:textSize="19.0sp"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              android:text=""
                              android:gravity="center"
                              android:id="@+id/c_shop_reamin"
                              android:layout_centerVertical="true"
                              android:layout_alignParentRight="true"
                              android:textColor="@color/gray_b5"
                              android:textSize="14.0sp"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/COLOR_LINE_E9"  />
                <RelativeLayout android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="13dp"
                                android:paddingRight="13dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="56dp">
                    <TextView android:layout_width="wrap_content"
                              android:text="消费积分"
                              android:gravity="center"
                              android:id="@+id/c_shop_interal"
                              android:textColor="@color/COLOR_2E"
                              android:layout_centerVertical="true"
                              android:layout_alignParentLeft="true"
                              android:textSize="19.0sp"
                              android:layout_height="wrap_content"/>

                    <ImageView    android:layout_width="16dp"
                                  android:background="@null"
                                  android:layout_centerVertical="true"
                                  android:id="@+id/money_icon"
                                  android:layout_toLeftOf="@+id/c_shop_remain_interal"
                                  android:src="@drawable/shopinfo_head_mony" android:layout_height="13dp"  />

                    <TextView android:layout_width="wrap_content"
                              android:text=""
                              android:gravity="center"
                              android:id="@+id/c_shop_remain_interal"
                              android:layout_marginLeft="10dp"
                              android:textColor="@color/public_red_bkg"
                              android:layout_centerVertical="true"
                              android:layout_alignParentRight="true"
                              android:textSize="14.0sp"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_marginTop="10dp" android:layout_height="1dp" android:background="@color/COLOR_LINE_E9"  />
                <LinearLayout android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:layout_height="56dp">
                    <View android:layout_width="0dp" android:layout_weight="0.1" android:layout_height="wrap_content" />
                    <LinearLayout android:layout_width="0dp"  android:layout_weight="0.8" android:gravity="center"  android:orientation="horizontal" android:layout_height="wrap_content">
                    <ImageView    android:layout_width="31dp"
                                  android:background="@null"
                                  android:id="@+id/c_shop_plus"
                                  android:src="@drawable/c_shop_plus" android:layout_height="31dp"  />
                    <TextView android:layout_width="141dp"
                              android:text="1"
                              android:gravity="center"
                              android:id="@+id/c_shop_number"
                              android:textColor="@color/COLOR_2E"
                              android:layout_centerVertical="true"
                              android:textSize="19.0sp"
                              android:layout_height="wrap_content"/>
                    <ImageView    android:layout_width="31dp"
                                  android:background="@null"
                                  android:id="@+id/c_shop_add"
                                  android:src="@drawable/c_shop_add" android:layout_height="31dp"  />
                    </LinearLayout>
                    <View android:layout_width="0dp" android:layout_weight="0.1" android:layout_height="wrap_content" />
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/COLOR_LINE_E9"  />
                <TextView android:layout_width="match_parent"
                          android:text="@string/shop_comcire_hit"
                          android:gravity="left"
                          android:paddingLeft="13dp"
                          android:textColor="@color/gray_b5"
                          android:layout_centerVertical="true"
                          android:layout_marginTop="33dp"
                          android:textSize="13.0sp"
                          android:layout_height="wrap_content"/>
                <View android:layout_width="match_parent" android:layout_marginTop="10dp" android:layout_height="1dp" android:background="@color/COLOR_LINE_E9"  />
                <LinearLayout android:layout_width="match_parent" android:paddingLeft="13dp"  android:gravity="center_vertical"   android:layout_height="56dp" android:orientation="horizontal"
                        >
                    <TextView android:layout_width="wrap_content"
                              android:text="姓名"
                              android:textColor="@color/COLOR_2E"
                              android:layout_centerVertical="true"
                              android:textSize="15.0sp"
                              android:layout_marginRight="25dp"
                              android:layout_height="wrap_content"/>

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/c_shop_username" android:background="@null"
                            style="@style/CCWEditTextStyle" android:padding="10dp"
                            android:imeOptions="actionNext" android:inputType="textNoSuggestions|text"
                            android:singleLine="true" />
                </LinearLayout>
                <View android:layout_width="match_parent"  android:layout_height="1dp" android:background="@color/COLOR_LINE_E9"  />
                <LinearLayout android:layout_width="match_parent" android:paddingLeft="13dp"  android:gravity="center_vertical"   android:layout_height="56dp" android:orientation="horizontal"
                        >
                    <TextView android:layout_width="wrap_content"
                              android:text="手机号"
                              android:textColor="@color/COLOR_2E"
                              android:layout_marginRight="12dp"
                              android:layout_centerVertical="true"
                              android:numeric="integer"
                              android:textSize="15.0sp"
                              android:layout_height="wrap_content"/>

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:numeric="integer"
                            android:id="@+id/c_shop_phone" android:background="@null"
                            style="@style/CCWEditTextStyle" android:padding="10dp"
                            android:imeOptions="actionNext" android:inputType="textNoSuggestions"
                            android:singleLine="true" />
                </LinearLayout>
                <View android:layout_width="match_parent"  android:layout_height="1dp" android:background="@color/COLOR_LINE_E9"  />
                <LinearLayout android:layout_width="match_parent" android:paddingLeft="13dp"  android:gravity="center_vertical"   android:layout_height="56dp" android:orientation="horizontal"
                        >
                    <TextView android:layout_width="wrap_content"
                              android:text="地址"
                              android:layout_marginRight="25dp"
                              android:textColor="@color/COLOR_2E"
                              android:layout_centerVertical="true"
                              android:textSize="15.0sp"
                              android:layout_height="wrap_content"/>

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/c_shop_address" android:background="@null"
                            style="@style/CCWEditTextStyle" android:padding="10dp"
                            android:imeOptions="actionNext" android:inputType="textNoSuggestions|text"
                            android:singleLine="true" />
                </LinearLayout>
                <View android:layout_width="match_parent"  android:layout_height="1dp" android:background="@color/COLOR_LINE_E9"  />
                <EditText android:layout_width="match_parent"
                          android:paddingLeft="13dp"
                          android:id="@+id/shop_exchange_describe"
                          android:hint="@string/shop_exchange_address_hit"
                          android:gravity="left|top"
                          android:paddingBottom="30dp"
                          android:background="@null"
                          android:textColor="@color/gray_b5"
                          android:layout_centerVertical="true"
                          android:layout_marginTop="12dp"
                          android:textSize="13.0sp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
       </ScrollView>
       <Button android:id="@+id/comshop_exchange_btn"   android:layout_width="match_parent"
               android:textColor="@color/white"  android:textSize="13.0sp"
               android:layout_alignParentBottom="true"
               android:background="@color/public_red_bkg" android:layout_height="42dp" android:text="确认兑换" />
   </RelativeLayout>
</LinearLayout>