<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dfsx.shop.test" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="23" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.dfsx.shop.test"
        android:targetPackage="com.dfsx.shop.test" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
 <!-- 读写存储卡的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.dfsx.lzcms.liveroom.LiveFullScreenRoomActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>
        <activity
            android:name="com.dfsx.lzcms.liveroom.LiveBackPlayFullScreenRoomActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>
        <activity
            android:name="com.dfsx.lzcms.liveroom.LiveServiceRoomActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.dfsx.lzcms.liveroom.LiveRoomSwitchActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dfsx.lzcms.liveroom.LiveShowRoomActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" >
        </activity>
        <activity
            android:name="com.dfsx.lzcms.liveroom.LiveRoomActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dfsx.lzcms.liveroom.LivePlayerTestActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dfsx.lzcms.liveroom.WhiteTopBarActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|layoutDirection"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
 <!-- Mqtt Service -->
        <service android:name="org.eclipse.paho.android.service.MqttService" >
        </service>

        <provider
            android:name="com.just.library.AgentWebFileProvider"
            android:authorities="com.dfsx.shop.test.AgentWebFileProvider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/web_download_paths" />
        </provider>

        <receiver android:name="com.just.library.RealDownLoader$NotificationBroadcastReceiver" />

        <activity
            android:name="com.dfsx.selectedmedia.activity.HomeFragmentActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.dfsx.selectedmedia.activity.BucketHomeFragmentActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dfsx.selectedmedia.activity.ImageFragmentActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dfsx.selectedmedia.activity.VideoFragmentActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dfsx.core.PermissionsActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.dfsx.core.common.act.ApiVersionErrorActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.dfsx.core.common.act.WhiteTopBarActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.dfsx.lscms.default"
                    android:scheme="white_top_bar" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dfsx.core.common.act.DefaultFragmentActivity"
            android:configChanges="keyboard|keyboardHidden|uiMode"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="go_home"
                    android:scheme="@string/app_name" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="go_checktele"
                    android:scheme="@string/app_name" />
                <data
                    android:host="go_communitPub"
                    android:scheme="@string/app_name" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gun0912.tedpermission.TedPermissionActivity"
            android:theme="@style/Theme.Transparent" />

        <meta-data
            android:name="com.bumptech.glide.integration.okhttp.OkHttpGlideModule"
            android:value="GlideModule" />

        <receiver
            android:name="com.dfsx.videoijkplayer.util.NetworkChangeReceiver"
            android:label="NetworkChangeReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
 <!-- QQ的注册信息   start -->
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1105988076" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="behind"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.dfsx.thirdloginandshare.activity.QQCallBackAct"
            android:configChanges="orientation|keyboardHidden"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
 <!-- QQ的注册信息  end -->
        <!-- SinaWeibo的注册信息  start -->
        <activity
            android:name="com.dfsx.thirdloginandshare.share.WBShareActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.dfsx.thirdloginandshare.activity.WBAuthActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
 <!-- SinaWeibo的注册信息  end -->
        <!-- 微信分享回调 -->
        <activity
            android:name="com.dfsx.thirdloginandshare.activity.BaseWXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.dfsx.openimage.ShowWebImageActivity"
            android:configChanges="keyboard|keyboardHidden|uiMode"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
    </application>

</manifest>